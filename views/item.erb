<h1>Item : <%= @item.name %></h1>
<h1>Rank : <%= @item.rank %></h1>

<form action="/items/<%= @item.id %>" method="post">
  <div class="form-group">
    <label for="name">Change Name</label>
    <input id="name" name="name" class="form-control" value="<%=@item.name%>" type="text">
  </div>
  <div class="form-group">
    <label for="rank">Change Rank</label>
    <input id="rank" name="rank" class="form-control" value="<%=@item.rank%>" type="text">
  </div>
  <button type="submit" class="btn">Submit</button>
</form>

